abstract = {Mobile Robots (MRs) and their applications are undergoing massive development, requiring a diversity of autonomous or self-directed robots to fulfill numerous objectives and responsibilities. Integrating MRs with the Intelligent Internet of Things (IIoT) not only makes robots innovative, trackable, and powerful but also generates numerous threats and challenges in multiple applications. The IIoT combines intelligent techniques, including artificial intelligence and machine learning, with the Internet of Things (IoT). The location information (localization) of the MRs triggers innumerable domains. To fully accomplish the potential of localization, Mobile Robot Localization (MRL) algorithms need to be integrated with complementary technologies, such as MR classification, indoor localization mapping solutions, three-dimensional localization, etc. Thus, this paper endeavors to comprehensively review different methodologies and technologies for MRL, emphasizing intelligent architecture, indoor and outdoor methodologies, concepts, and security-related issues. Additionally, we highlight the diverse MRL applications where information about localization is challenging and present the various computing platforms. Finally, discussions on several challenges regarding navigation path planning, localization, obstacle avoidance, security, localization problem categories, etc., and potential future perspectives on MRL techniques and applications are highlighted.}
}
@incollection{SOUTHWORTH2024,
title = {Remote Sensing of Savanna Vegetation},
booktitle = {Reference Module in Earth Systems and Environmental Sciences},
publisher = {Elsevier},
year = {2024},
isbn = {978-0-12-409548-9},
doi = {https://doi.org/10.1016/B978-0-443-13220-9.00006-8},
url = {https://www.sciencedirect.com/science/article/pii/B9780443132209000068},
author = {Jane Southworth and Hannah V. Herrero and Cerian Gibbes and Erin L. Bunting and Mohammad Mehedy Hassan},
keywords = {Savannas, Remote sensing, Spatial heterogeneity, Temporal variability, Fire regimes, Machine learning, Vegetation indices, Artificial intelligence (AI), NDVI, Data fusion},
abstract = {Savannas, complex ecosystems characterized by an intricate blend of grasslands and woodlands, span vast portions of the global terrestrial landscape. These ecosystems not only serve as biodiversity hotspots but also support vast human populations and play a significant role in the Earth's carbon cycle. In this chapter, we embarked on an in-depth exploration of the distinctiveness of savannas, emphasizing their spatial heterogeneity, ranging from open grasslands to dense woodlands, and the complex temporal fluctuations dictated by seasonal shifts, fire regimes, and longer-term changes instigated by broader climatic shifts. Remote sensing emerges as a promising tool for studying these landscapes, given its ability to offer large-scale, repetitive, and detailed observations. However, it is not without challenges. We dissected the difficulties of interpreting mixed pixels, navigating rapid seasonal transitions in vegetation that sometimes surpass satellite revisit intervals, detecting and differentiating burn scars post-fire, and contending with atmospheric interferences like frequent cloud cover, particularly pronounced in tropical savannas. This chapter also underscores the innovations in technology and methodology that provide avenues to circumvent these challenges. Multi-sensor approaches amalgamate data from various sensors to refine vegetation characterization. Advanced machine learning and AI-driven algorithms are emerging as pivotal approaches, aiding in sophisticated image processing, pattern recognition, and anomaly detection. But even in this age of GeoAI, the importance of ground-truthing remains paramount. In-situ observations and measurements fortify the credibility of remote sensing data, anchoring them in tangible, on-the-ground realities. While the present offers a gamut of tools and methodologies to study savannas, the future is even more promising. It beckons with the possibility of seamlessly integrated multi-sensor systems, more advanced AI models tailored for savanna studies, and a deeper symbiosis between technology and traditional field surveys. As we stand on this cusp, it is imperative to remember that understanding and preserving savannas is not just an academic pursuit; it is a commitment to our planet's ecological richness and resilience.}
}
@article{CHAMUNDEESWARI2022104626,
